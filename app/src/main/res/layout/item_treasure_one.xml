<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="goodsBean"
            type="com.superc.bannerdairy.model.OrderItem.OrderGoodsBean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_bgg"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:padding="2dp"
            android:background="@drawable/circle_h_bg"
            android:layout_centerHorizontal="true"
            android:src="@drawable/shangpin1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@{goodsBean.goods_name}"
                    android:maxLines="1"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/iv_price"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="right"
                    android:textSize="14sp"/>


            </LinearLayout>
            <TextView
                android:id="@+id/iv_buy_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:text="- -"
                android:layout_marginRight="15dp"
                android:textColor="@color/text_gray"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:paddingTop="10dp"
                android:textColor="@color/text_gray"
                android:text="@{goodsBean.goods_spec}"
                android:singleLine="true"
                android:maxLength="10"
                android:textSize="13sp"/>



        </LinearLayout>

    </LinearLayout>

</layout>