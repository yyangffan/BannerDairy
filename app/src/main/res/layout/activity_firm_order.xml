<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="firmOrderLock"
            type="com.superc.bannerdairy.lock.FirmOrderLock"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/firm_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_rl"
            android:background="@color/app_bg"
            android:orientation="vertical">

            <include
                android:id="@+id/title_bar"
                layout="@layout/include_title_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_hight"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/layout_selectAdd"
                        layout="@layout/item_select_address"
                        android:visibility="gone"/>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/shape_rounded_rectangle_white"
                        android:onClick="@{()->firmOrderLock.goSelectAdd()}">

                        <View
                            android:id="@+id/view6"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/shape_rounded_rectangle_white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <ImageView
                            android:id="@+id/ig_address"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="@+id/view6"
                            app:layout_constraintStart_toStartOf="@+id/view6"
                            app:layout_constraintTop_toTopOf="@+id/view6"
                            app:srcCompat="@drawable/receiving_address"
                            tools:layout_editor_absoluteX="10dp"/>

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@{firmOrderLock.item.contact}"
                            android:textColor="@color/text_black"
                            app:layout_constraintStart_toEndOf="@+id/ig_address"
                            app:layout_constraintTop_toTopOf="@+id/view6"
                            tools:layout_editor_absoluteX="38dp"/>

                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="@{firmOrderLock.item.address}"
                            app:layout_constraintBottom_toBottomOf="@+id/view6"
                            app:layout_constraintStart_toStartOf="@+id/tv_name"
                            tools:layout_editor_absoluteX="38dp"/>

                        <ImageView
                            android:id="@+id/imageView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintBottom_toBottomOf="@+id/view6"
                            app:layout_constraintEnd_toEndOf="@+id/view6"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/view6"
                            app:srcCompat="@drawable/xiayige"/>

                    </android.support.constraint.ConstraintLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/dingdanzhuangshi"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@+id/car_cb"
                            android:background="@color/app_fg"
                            android:gravity="center_vertical"
                            android:padding="3dp"
                            android:text="旗帜奶粉"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_firmorder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:paddingTop="5dp"
                            android:paddingLeft="5dp"
                            android:text="备注:"
                            android:textColor="@color/black"/>

                        <EditText
                            android:id="@+id/order_edt_beizhu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:hint="请填写备注"
                            android:padding="5dp"
                            android:textColorHint="@color/buy_bg"
                            android:textSize="14sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:background="@color/gray_nnnn"
                            android:layout_height="0.5dp"/>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合计金额："
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/youfe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮费:"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/youfei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/shangpin_pric"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="商品价格:"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:id="@+id/shangpin_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.00"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@color/red"
                android:gravity="center"
                android:onClick="@{()->firmOrderLock.goPay()}"
                android:text="确认支付"
                android:textColor="@color/white"
                android:textSize="16sp"/>


        </LinearLayout>
    </RelativeLayout>

</layout>
