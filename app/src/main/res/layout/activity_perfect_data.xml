<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="perfectDataLock"
            type="com.superc.bannerdairy.lock.PerfectDataLock"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/title_bar"
            layout="@layout/include_title_bar"
            android:layout_width="0dp"
            android:layout_height="@dimen/title_bar_hight"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <!--android:onClick="@{()->perfectDataLock.choseHead()}"-->
        <TextView
            android:id="@+id/tv_modify_head"
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_circle_horn"
            android:gravity="center_vertical"

            android:paddingLeft="72dp"
            android:text="@string/modify_head"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_bar"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView7"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/head"
            app:layout_constraintBottom_toBottomOf="@+id/tv_modify_head"
            app:layout_constraintLeft_toLeftOf="@+id/tv_modify_head"
            app:layout_constraintTop_toTopOf="@+id/tv_modify_head"
            />

        <!--<ImageView-->
        <!--android:id="@+id/imageView7"-->
        <!--android:layout_width="55dp"-->
        <!--android:layout_height="55dp"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:layout_marginLeft="8dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--app:layout_constraintBottom_toBottomOf="@+id/tv_modify_head"-->
        <!--app:layout_constraintLeft_toLeftOf="@+id/tv_modify_head"-->
        <!--app:layout_constraintTop_toTopOf="@+id/tv_modify_head"-->
        <!--app:srcCompat="@drawable/head"/>-->

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="8dp"
            android:layout_height="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_modify_head"
            app:layout_constraintRight_toRightOf="@+id/tv_modify_head"
            app:layout_constraintTop_toTopOf="@+id/tv_modify_head"
            app:layout_constraintVertical_bias="0.522"
            app:srcCompat="@drawable/xiayige"/>

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_circle_horn"
            android:ems="10"
            android:hint="@string/please_enter_your_real_name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:paddingStart="66dp"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/tv_modify_head"
            app:layout_constraintRight_toRightOf="@+id/tv_modify_head"
            app:layout_constraintTop_toBottomOf="@+id/tv_modify_head"/>

        <ImageView
            android:id="@+id/imageView18"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/edt_name"
            app:layout_constraintLeft_toLeftOf="@+id/edt_name"
            app:layout_constraintTop_toTopOf="@+id/edt_name"
            app:srcCompat="@drawable/name"/>

        <EditText
            android:id="@+id/edt_id_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_circle_horn"
            android:digits="@string/filter_vcode"
            android:ems="10"
            android:hint="@string/please_input_your_id_number"
            android:inputType="number"
            android:maxLength="18"
            android:padding="10dp"
            android:paddingStart="100dp"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/tv_modify_head"
            app:layout_constraintRight_toRightOf="@+id/tv_modify_head"
            app:layout_constraintTop_toBottomOf="@+id/edt_name"/>

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/edt_id_num"
            app:layout_constraintLeft_toLeftOf="@+id/edt_id_num"
            app:layout_constraintTop_toTopOf="@+id/edt_id_num"
            app:layout_constraintVertical_bias="0.521"
            app:srcCompat="@drawable/id_num"/>

        <TextView
            android:id="@+id/edt_phone_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_circle_horn"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入您的手机号"
            android:padding="10dp"
            android:paddingStart="86dp"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/tv_modify_head"
            app:layout_constraintRight_toRightOf="@+id/tv_modify_head"
            app:layout_constraintTop_toBottomOf="@+id/edt_id_num"/>

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/edt_phone_num"
            app:layout_constraintLeft_toLeftOf="@+id/edt_phone_num"
            app:layout_constraintTop_toTopOf="@+id/edt_phone_num"
            app:srcCompat="@drawable/phone_num"/>

        <TextView
            android:id="@+id/edt_receiving_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_circle_horn"
            android:ems="10"
            android:text="设置地址"
            android:inputType="textPersonName"
            android:textColor="@color/black"
            android:padding="10dp"
            android:paddingStart="36dp"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/tv_modify_head"
            app:layout_constraintRight_toRightOf="@+id/tv_modify_head"
            app:layout_constraintTop_toBottomOf="@+id/edt_phone_num"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/edt_receiving_address"
            app:layout_constraintLeft_toLeftOf="@+id/edt_receiving_address"
            app:layout_constraintTop_toTopOf="@+id/edt_receiving_address"
            app:srcCompat="@drawable/receiving_address"/>

        <TextView
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/red_circle_horn"
            android:gravity="center"
            android:onClick="fix"
            android:padding="12dp"
            android:text="@string/ok_space"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/tv_modify_head"
            app:layout_constraintRight_toRightOf="@+id/tv_modify_head"/>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:gravity="center_vertical"
            android:text="姓名:"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/edt_name"
            app:layout_constraintLeft_toRightOf="@+id/imageView18"
            app:layout_constraintTop_toTopOf="@+id/edt_name"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:text="身份证号:"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/edt_id_num"
            app:layout_constraintLeft_toRightOf="@+id/imageView19"
            app:layout_constraintTop_toTopOf="@+id/edt_id_num"/>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:clickable="false"
            android:enabled="false"
            android:textColor="@color/black"
            android:text="手机号:"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/edt_phone_num"
            app:layout_constraintLeft_toRightOf="@+id/imageView20"
            app:layout_constraintTop_toTopOf="@+id/edt_phone_num"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:onClick="@{()->perfectDataLock.bdZhanghao()}"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_circle_horn"
            android:padding="10dp"
            android:paddingStart="36dp"
            android:text="绑定支付宝"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@+id/edt_receiving_address"
            app:layout_constraintRight_toRightOf="@+id/edt_receiving_address"
            app:layout_constraintTop_toBottomOf="@+id/edt_receiving_address"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/bd"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintLeft_toLeftOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4"/>


    </android.support.constraint.ConstraintLayout>

</layout>
