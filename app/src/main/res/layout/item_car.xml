<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="carGoodsItem"
            type="com.superc.bannerdairy.model.CarGoodsItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_fg"
        android:orientation="horizontal"
        android:padding="2dp">
        <CheckBox
            android:id="@+id/cb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/shangpin1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="@{carGoodsItem.goods_name}"
                    android:textColor="@color/text_black"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/iv_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="@={carGoodsItem.allprice}"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/red"
                    android:textSize="16sp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/tv_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:text="@{carGoodsItem.getSpec_name}"
                android:textSize="13sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-22dp"
                android:gravity="right">

                <TextView
                    android:id="@+id/less"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@color/app_bg"
                    android:gravity="center"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:text="â€”"
                    android:textColor="@color/text_gray"/>

                <TextView
                    android:id="@+id/num"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@color/app_bg"
                    android:gravity="center"
                    android:text="@={carGoodsItem.num}"
                    android:textColor="@color/text_black"/>

                <TextView
                    android:id="@+id/more"
                    android:layout_width="35dp"
                    android:layout_height="30dp"
                    android:background="@color/app_bg"
                    android:gravity="center"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:text="+"
                    android:textColor="@color/text_gray"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>