<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_fefe"
    >
    <TextView
        android:id="@+id/buyrecord_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:text="- -"
        android:background="@color/gray_fefe"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/buyrecord_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:text="- -"
        android:textColor="@color/parting_line"
        android:paddingLeft="10dp"
        android:textSize="12sp"
        android:background="@color/gray_fefe"
        app:layout_constraintLeft_toLeftOf="@+id/buyrecord_title"
        app:layout_constraintTop_toBottomOf="@+id/buyrecord_title"/>

    <TextView
        android:id="@+id/buyrecord_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="-5dp"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:text="- -"
        android:paddingRight="10dp"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:background="@color/gray_fefe"
        app:layout_constraintBottom_toBottomOf="@+id/buyrecord_time"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buyrecord_title"
        app:layout_constraintVertical_bias="0.444"/>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/login_bg"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/buyrecord_time"/>
</android.support.constraint.ConstraintLayout>