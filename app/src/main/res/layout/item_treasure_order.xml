<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="orderFragment"
            type="com.superc.bannerdairy.lock.OrderFramentLock" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_fg"
        android:orientation="vertical"
        android:layout_marginBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingBottom="4dp"
        android:paddingRight="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/cb_order"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@drawable/check_select_bg"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/treasure_order_danhao"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="--"
                android:textSize="15sp"
                android:layout_marginLeft="2dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="待付款"
                android:gravity="right"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/text_gray"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_bg">
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- -"
                android:textSize="15sp"
                android:textColor="@color/text_gray"/>
            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- -"
                android:gravity="right"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/select_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/exit_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除订单"
                android:textSize="14sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:background="@drawable/circle_h_bg"
                android:textColor="@color/text_gray"/>
            <TextView
                android:id="@+id/pay_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去支付"
                android:gravity="center"
                android:textSize="14sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/login_ok_bg"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>

</layout>